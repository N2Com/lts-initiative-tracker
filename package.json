{
  "productName": "Less Than Simple Initiative Tracker",
  "main": "public/electron.js",
  "name": "less-than-simple-initiative-tracker",
  "version": "0.2.6",
  "description": "A truly simple initiative tracker, with no extra fluff",
  "author": {
    "name": "N2Com",
    "email": "thenifusion@gmail.com"
  },
  "homepage": "./",
  "build": {
    "appId": "com.lts.initiative.tracker",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./build/icosahedron.png"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.1",
    "@mui/material": "^5.0.2",
    "@mui/styles": "^5.0.1",
    "@reduxjs/toolkit": "^1.6.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.5",
    "electron-store": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.4.0",
    "react-redux": "^7.2.3",
    "react-scripts": "4.0.3",
    "react-tooltip": "^4.2.21",
    "redux-logic": "^3.0.3",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && electron-builder",
    "start": "concurrently \"cross-env yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "wait-on": "^6.0.0"
  }
}
